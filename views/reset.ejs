
<%- include ("partials/header") %>
<div class="row mt-5">
    <div class="col-md-8 m-auto">
		<form action="/reset/<%= id %>" method="POST">
		    <h1 class="display-4 mb-1" style="text-align: center;">Reset Password</h1>
		<br>
		<div class="card card-body text-center" style="background:#303030;">
		  <div class="form-group">
		    <label for="password" style="color:white;">New Password</label>
		    <input type="password" name="password" value="" placeholder="New password" autofocus="autofocus" class="form-control"/>
		  </div>
		  <div class="form-group">
		    <label for="confirm" style="color:white;">Confirm Password</label>
		    <input type="password" name="confirm" value="" placeholder="Confirm password" class="form-control"/>
		  </div>
		  <div class="form-group">
		    <button type="submit" class="btn btn-primary btn-block btb-lg">Update Password</button>
		  </div>
        </form>
        <p class="mt-4" style="color:white;">
            Remember your password? <a href="/login">Login</a>
        </p>
	</div>
</div>
<%- include ("partials/footer") %>