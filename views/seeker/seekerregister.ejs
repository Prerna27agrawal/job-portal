                <label for="logo">Photo: </label>
                <input type="file" class="form-control-file" id="logo" name="image" placeholder="Add image"
                    accept=".png,.jpg,.jpeg" aria-describedby="passwordHelpInline">
                <small id="passwordHelpInline" class="text-muted">
                    (Accepted file formats: PNG, JPG, JPEG)
                </small>
            </div>

