    <title>Document</title>
    <style>
* {
  box-sizing: border-box;
}

body {
  background-color: #f1f1f1;
  padding: 20px;
  font-family: Arial;
}
hr{
    color:rgb(0, 10, 4);
}
/* Center website */
.main {
  padding:20px 5% 20px;
  margin: auto;
}

h1 {
  font-size: 40px;
  word-break: break-all;
}
h2{
    margin-bottom: 10px;
    margin-left:25px;
}
.thumbnail{
    padding: 20px ;
    box-shadow: 0 3px 10px 0 rgba(0,0,0,.1);
    background-color: white;
}
.row{
    margin: 0;
}
span{
    position: relative;
    bottom: 0;
    right: 0;
    float: right;
}
    </style>
</head>

<body>
    <div class="container">
        <% if(error && error.length >0){%>
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            <%= error %>
        </div>
        <% }%>
        <% if(success && success.length >0){%>
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                  </button>
            <%= success %>
            </div>
            <%}%>
    </div>
    <div class="main">
        <% companies.forEach(function(company) {
             if(String(company.createdBy.id) == String(job.postedBy.id)){ 
                 var bool1=true,bool2=true;
                    company.subscribedBy.forEach(function(seeker){
                        if(String(seeker._id) == String(currentUser._id))
                         bool1=false;
                    });
                    job.appliedBy.forEach(function(seeker){
                        if(String(seeker.postedBy._id) == String(currentUser._id))
                         bool2=false;
                    }); %>

        <h1><img src="https://tppwebsolutions.com/wp-content/uploads/logo-demo3.png" height="50px" width="50px"><%= company.name %><span>
            <% if(currentUser){ %>
            <% if(bool1){ %>
                 <a href="/seeker/<%= company._id %>/subscribe/<%= job._id %>" type="button" class="btn btn-danger">Subscribe</a>
             <% } else { %>
                <a href="/seeker/<%= company._id %>/unsubscribe/<%= job._id %>" type="button" class="btn btn-primary" style="opacity: 0.7;">Subscribed</a>
            <% } %>
            <% } %>
        </span></h1>
        <hr>
        <h2><%= job.name %></h2>
        <br>
        <div class="container">
            <div class="row" style="display: flex; flex-wrap: wrap;padding: 10px;">
            <div class="col-lg-4 col-sm-12">
                <div class="thumbnail" >
                    <div class="caption">
                        <p><b>JOB POSITION:  </b><%= job.name %></p>
                        <p><b>JOB LOCATION:  </b><%= job.location %></p>
                        <p><b>JOB EXPERIENCE: </b><%= job.experience %>+ years of experience</p>
                    </div>
                    <br><br>
                   <% if(currentUser){ %>
                   <% if(bool2){ %>
                    <form action="/seeker/<%= job._id %>/applyjob" method="POST">
                      <input type="submit" name="submit" value="Apply" class="btn btn-success active">
                    </form>
                <% } else { %>
                    <button class="btn btn-success" type="button" disabled>Applied</button>
                   <% }} %>
                </div>
            </div>
            <div class="col-lg-8 col-sm-12">
                <div class="row">
                <div class="thumbnail">
                    <h4><b>JOB DESCRIPTION:</b></h4>
                    <p><%= job.description %></p>
                    <br><br>
                </div>
                </div>
                <div class="row">
                <div class="thumbnail">
                    <h4><b>ABOUT <%= company.name %>: </b></h4>
                    <p><%= company.description %></p>
                    <form action="/company/<%= job.postedBy.id %>/myprofile" method="GET">
                       <input type="submit" value="Visit Company website" name="submit2" class="btn btn-info active">
                    </form>
                </div>
                </div>
            </div>
            </div>
            </div>
            <% } %>
            <% }); %>
        </div>
</body>
</html>

