                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Full Name</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                <%= foundSeeker.firstname%> <%=foundSeeker.lastname%>
                            </div>
                        </div>
