<style>
    body {
        /* margin-top: 20px; */
        color: #1a202c;
        text-align: left;
        background-color: #e2e8f0;
       
    }

    .main-body {
        padding: 15px;
    }

    .card {
        box-shadow: 0 1px 3px 0 rgba(0, 0, 0, .1), 0 1px 2px 0 rgba(0, 0, 0, .06);
    }

    .card {
        position: relative;
        display: flex;
        flex-direction: column;
        min-width: 0;
        word-wrap: break-word;
        background-color: #fff;
        background-clip: border-box;
        border: 0 solid rgba(0, 0, 0, .125);
        border-radius: .25rem;
    }

    .card-body {
        flex: 1 1 auto;
        min-height: 1px;
        padding: 1rem;
    }

    .gutters-sm {
        margin-right: -8px;
        margin-left: -8px;
    }

    .gutters-sm>.col,
    .gutters-sm>[class*=col-] {
        padding-right: 8px;
        padding-left: 8px;
    }

    .mb-3,
    .my-3 {
        margin-bottom: 1rem !important;
    }

    .bg-gray-300 {
        background-color: #e2e8f0;
    }

    .h-100 {
        height: 100% !important;
    }

    .shadow-none {
        box-shadow: none !important;
    }
    .displayform{
        display: none;
    }
    .projectform_input{
        margin: 5px 10px 5px 0;
        padding: 10px;
        background-color: #fff;
        border: 1px solid #ddd;
    }
    .fontstyle{
        font-family: 'Roboto', sans-serif;
    }
</style>

<div class="container">
    <div class="main-body">

        <!-- Breadcrumb -->
        <nav aria-label="breadcrumb" class="main-breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/seeker/index">Home</a></li>
                <li class="breadcrumb-item">User</li>
                <li class="breadcrumb-item active" aria-current="page">User Profile</li>
            </ol>
        </nav>
        <!-- /Breadcrumb -->


        <div class="row gutters-sm">
            <div class="col-md-4 mb-3">
                <div class="card">
                    <div class="card-body">
                        <div class="d-flex flex-column align-items-center text-center">
                            <%  var str1= foundSeeker.image; %>
                           <% if(str1.startsWith('https')){ %>
                                <img src="<%= str1 %>" alt="Admin" class="rounded-circle"
                                width="150">
                           <% } else{ %>
                            <img src="/resume_folder/<%= foundSeeker.image %>" alt="Admin" class="rounded-circle"
                                width="150">
                            <% } %>
                            <div class="mt-3">
                                <h4><%= foundSeeker.firstname%> <%= foundSeeker.lastname%></h4>
                                <p class="text-secondary mb-1"><%= foundSeeker.status%></p>
                                <p class="text-muted font-size-sm"><%= foundSeeker.city%>, <%= foundSeeker.state%>,
                                    <%= foundSeeker.country%></p>
        
                                <a href="/seeker/<%= foundSeeker._id %>/appliedJobs"
                                    class="btn btn-primary active ">Applied Jobs</a>
                                <button class="btn btn-outline-primary active">Edit Profile</button>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card mt-3">
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
