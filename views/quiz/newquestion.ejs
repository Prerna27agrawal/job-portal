<%- include("../partials/header1") %>
<div class="container">
<div class="row mt-5">
    <div class="col-md-6 m-auto">
        <h1 class="display-4 mb-2" style="text-align: center;">Add New Question to test <%= quiz.title %></h1><br>
        <div class="card card-body text-center" style="background:#303030;">
            <form action="/quiz/<%= quiz._id %>/questions" method="POST">
                <div class="form-group">
                    <label for="question" style="color:white;">Question: </label>
                    <input type="text" id="question" name="description" class="form-control" placeholder="Type the question" />
                </div>
                <div class="form-group">
                    <label for="opt1" style="color:white;">Answer 1: </label>
                    <input type="text" id="opt1" name="opt1" class="form-control"
                        placeholder="Type answer 1" />
                </div>
                <div class="form-group">
                    <label for="opt2" style="color:white;">Answer 2: </label>
                    <input type="text" id="opt2" name="opt2" class="form-control"
                        placeholder="Type answer 2" />
                    
                </div><div class="form-group">
                    <label for="opt3" style="color:white;">Answer 3: </label>
                    <input type="text" id="opt3" name="opt3" class="form-control"
                        placeholder="Type answer 3" />
                  
                </div><div class="form-group">
                    <label for="opt4" style="color:white;">Answer 4: </label>
                    <input type="text" id="opt4" name="opt4" class="form-control"
                        placeholder="Type answer 4" />
                    <!-- <div class="form-group" style="color:white;">
                            <p>Is this correct?: </p>
                            <input type="radio" id="correct" name="opt4isCorrect" value="Yes">
                            <label for="correct" style="color:white;">Yes</label><br>
                            <input type="radio" id="correct" name="opt4isCorrect" value="No">
                            <label for="correct" style="color:white;">No</label><br>
                     </div> -->
                </div> 
                <div class="form-group">
                    <label for="opt1" style="color:white;">Correct Answer: </label>
                    <input type="text" id="opt1" name="correctAnswer" class="form-control"
                        placeholder="Type correct answer" />
                </div>
                <button type="submit" class="btn btn-lg btn-primary btn-block">Add</button>
                </div>
            </form>
        </div>
    </div>
</div>
