<%- include("../partials/header") %>
<div class="container">
    <form action="/quiz1/showquiz" method="POST">
        <h1>online quiz</h1>
<% questions.forEach(function(question){%> 
    <div class="form-group">
        <p>Q. <%= question.description %></p>
        <p>1. <%= question.answers.correct %></p>
<% question.answers.incorrect.forEach(function(incorrect){%> 
    <p>1. <%= incorrect %></p>
    <%});%>
    <br><br>
        <input type="radio" id="opt1" name="<%= question._id %>" value="<%= question.answers.correct %>">
        <label for="opt1" ><%= question.answers.correct %></label><br>
        <input type="radio" id="opt2" name="<%= question._id %>" value="<%= question.answers.incorrect[0] %>">
        <label for="opt2" ><%= question.answers.incorrect[0] %></label><br>
        <input type="radio" id="opt3" name="<%= question._id %>" value="<%= question.answers.incorrect[1] %>">
        <label for="opt3" ><%= question.answers.incorrect[1] %></label><br>
        <input type="radio" id="opt4" name="<%= question._id %>" value="<%= question.answers.incorrect[2] %>">
        <label for="opt4" ><%= question.answers.incorrect[2] %></label><br>
        <input type="radio" id="opt5" style="display: none;" name="<%= question._id %>" checked value="notattempted">
        <label for="opt5" ></label>
    </div>
    <%});%>
      <center><input type="submit" value="submit" class="btn btn-success"/></center>
    </form>
</div>
<%- include("../partials/footer") %>
