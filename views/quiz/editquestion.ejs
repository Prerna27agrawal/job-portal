<%- include("../partials/header1") %>
<div class="container">
<div class="row mt-5">
    <div class="col-md-6 m-auto">
        <h1 class="display-4 mb-2" style="text-align: center;">Edit Question of Test <%= quiz.title %></h1><br>
        <div class="card card-body text-center" style="background:#303030;">
            <form action="/quiz/<%= quiz._id %>/edit/<%= question._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <label for="question" style="color:white;">Question: </label>
                    <input type="text" id="question" name="description" value="<%= question.description %>" class="form-control" placeholder="Enter Question data"  required/>
                </div>
  
                <div class="form-group">
                    <label for="opt2" style="color:white;">option1: </label>
                    <input type="text" id="opt2" name="opt1"value="<%= question.options[0] %>"  class="form-control"
                        placeholder="Enter Option1" required/>
                </div><div class="form-group">
                    <label for="opt3" style="color:white;">option2: </label>
                    <input type="text" id="opt3" name="opt2" value="<%=  question.options[1] %>"  class="form-control"
                        placeholder="Enter Option2"required />
                </div><div class="form-group">
                    <label for="opt4" style="color:white;">option3: </label>
                    <input type="text" id="opt4" name="opt3" value="<%=  question.options[2] %>" class="form-control"
                        placeholder="Enter Option3" required/>
                </div> 
                <div class="form-group">
                    <label for="opt4" style="color:white;">option4: </label>
                    <input type="text" id="opt4" name="opt4" value="<%=  question.options[3] %>" class="form-control"
                        placeholder="Enter Option4" required/>
                </div> 
                <div class="form-group">
                    <label for="opt1" style="color:white;">Correct Answer: </label>
                    <input type="text" id="opt1" name="correctAnswer" value="<%= question.correct %>" class="form-control"
                        placeholder="Enter correctAnswer" required/>
                </div>
                <button type="submit" class="btn btn-lg btn-primary btn-block">Add</button>
                </div>
            </form>
        </div>
    </div>
</div>
