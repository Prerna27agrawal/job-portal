<%- include("../partials/header")%>
<div class="container">
			<% company.forEach(function(company){ %>
			<h2><b><%= company.name %> Jobs</b></h2>
			<div>
				
					<% jobs.forEach(function(job){ %>
						<div class="row  flex-wrap" >
						<div class="col-md-6 ">
						<br>
						
							<h4><b>Role</b></h4><h4><span><%= job.name %></span> </h4>
					
						<br>
						
							<h4><b>Location</b> </h4><h4><%= job.location %></h4>
						
						<br>
						
							<h4><b>Experience</b></h4><h4><%= job.experience %></h4>
						<br>
						<h4 class="text-centre"><b>About job</b></h4>
						<p>
							<%= job.description %>
						</p>
						<!------dont give spaces between href------->
						<% if((currentUser && company.createdBy.id.equals(currentUser._id) && currentUser.isCompany)){ %>
						<div class="text-left">
							<a class="btn btn-xs btn-warning" href="/company/<%= job._id %>/show/jobstats">
								Applied By</a>
						</div>
						<!----->
						<div class="text-right">
							<form class="delete-form" action="/company/jobdelete/<%= job._id %>?_method=DELETE"
								method="POST">
								<input class="btn btn-xs btn-danger" type="Submit" value="Delete">
							</form>
						</div>
						<% } %>
						<hr>
					</div>
				</div>
				<% }); %>
			</div>
		<% }); %>
</div>
<%- include("../partials/footer") %>