<%- include("../partials/header") %>
<div class="container">
    <div class="well">
    <div class="text-right">
        <p>
            <%= job.name %>
        </p>
<% job.appliedBy.forEach(function(user){%>
<%   seekers.forEach(function(seeker){%>
    <% if(seeker.seekerBy.id.equals(user.postedBy.id)){%>

        <div class="row">
            <div class="col-md-12">
               <strong> <%= seeker.firstname %> </strong>
               <strong><%= seeker.lastname %></strong>
                <!----- make moment to app.js-->
                <hr>
            </div>
        </div>

<div>
            <%= user._id %>
            <br>
            <% if((currentUser && currentUser.isCompany)){ %>
            <a class=" btn btn-warning" href="/job/<%= job._id %>/selected/<%= user._id %>/seeker/<%= seeker._id %>">Select</a>
           
           <% } %>
           <% if((currentUser && currentUser.isCompany)){ %>
            <a class=" btn btn-warning" href="/job/<%= job._id %>/rejected/<%= user._id %>/seeker/<%= seeker._id %>">Reject</a>
           <% } %>
</div>
             

<% } %>
<% }); %>
<% }); %>
    </div>
    </div>
</div>

<%- include("../partials/footer") %>
