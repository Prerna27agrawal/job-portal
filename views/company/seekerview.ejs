<%- include("../partials/header") %>
        <h2 class="text-center"><b><%= job.name %></b></h2>
        <br>
        <div class="container">
            <div class="row">
                <h1>Filter Seeker Records</h1>
                <div class="col-md-12">
                    <form action="/company/<%= job._id %>/show/jobstats/search" class="form-horizontal" method="POST" role="form">
                        <div class="col-md-3">
                            <div class="form-group">
                            <label for="name" class="col-md-12 control-label">By CollegeName</label>
                            <div class="col-md-12">
                                <input type="text" id="name" class="form-control" name="filtername" placeholder="Enter college name">
                            </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                            <label for="year" class="col-md-12 control-label">By GraduationYear</label>
                            <div class="col-md-12">
                                <input type="text" id="year" class="form-control" name="filteryear" placeholder="Enter year">
                            </div>
                            </div>
                        </div>

                        <!-- <div class="col-md-3">
                            <div class="form-group">
                            <label for="status" class="col-md-12 control-label">By Status</label>
                            <div class="col-md-12">
                                <select class="form-control" name="filterstatus">
                                    <option value="Pending">Pending</option>
                                    <option value="Accepted">Accepted</option>
                                    <option value="Rejected">Rejected</option>
                                </select>
                            </div>
                            </div>
                        </div> -->

                        <div class="col-md-3">
                            <div class="form-group">
                            <label for="status" class="col-md-12 control-label">By Cgpa</label>
                            <div class="col-md-12">
                                <!-- <input type="text" id="status" class="form-control" name="filtercgpa" placeholder="Enter cgpa"> -->
                                 <select class="form-control"id="status" name="filtercgpa">
                                    <option value="0.0">0.0-10.00</option>
                                    <option value="9.0">9.0-10.00</option>
                                    <option value="8.0">8.0-8.9</option>
                                    <option value="7.0">7.0-7.9</option>
                                    <option value="6.0">6.0-6.9</option>
                                    <option value="5.0">5.0-5.9</option>
                                    <option value="4.9">0.0-4.9</option>
                            </select> 
                            </div>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <input type="submit" class="form-control btn btn-primary" name="submit" placeholder="Filter">
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="container">
        <div class="table-responsive">
        <table class="table table-hover table-bordered">
            <thead class="thead-dark" style="background-color: black;color:white">
                <tr>
                    <th scope="col">No.</th>
                    <th scope="col">FirstName</th>
                    <th scope="col">LastName</th>
                    <th scope="col">College</th>
                    <th scope="col">Graduation Year</th>
                    <th scope="col">Stream</th>
                    <th scope="col">Resume download</th>
                    <th scope="col">Current Status</th>
                    <th scope="col">More Info</th>
                    <th scope="col">Accept</th>
                    <th scope="col">Reject</th>
                </tr>
            </thead>
            <% var i=1; %>
<% job.appliedBy.forEach(function(user){%>
<% seekers.forEach(function(seeker){%>
    <% if(seeker.seekerBy.id.equals(user.postedBy.id)){%>

       <tbody>
            <tr>
                <th scope="row"><%=i %></th>
                <td><%=seeker.firstname %></td>
                <td><%=seeker.lastname %></td>
                <td><%=seeker.education %></td>
                <td><%=seeker.gradyear %></td>
                <td><%=seeker.stream %></td>
                <td>
                    <a class="btn btn-light" role="button" href="/resume_folder/<%= seeker.resume %>" download><i class="fa fa-file-text" style="font-size: 36px;color:red;"></i></a>
                </td>
                <% if(user.isStatus == 'Accepted'){ %>
                <td  style="color:darkgreen;"><strong> Accepted</strong></td>
                <% } %>
                <% if(user.isStatus == 'Rejected'){ %>
                    <td  style="color:red;">Rejected</td>
                <% } %>
                <% if(user.isStatus == 'Pending'){ %>
                        <td  style="color:black;">Pending</td>
                 <% } %>
                 <% if((currentUser && currentUser.isCompany)){ %><td>
                    <a class="btn btn-primary" role="button" href="/seeker/<%= user.postedBy.id %>/myprofile">More Info</a>
                  </td>
                 <% } %>
                 <% if((currentUser && currentUser.isCompany)){ %><td>
                    <form onsubmit="return confirm('Do you really want to Accept the following?');" action="/job/<%= job._id %>/selected/<%= user.postedBy.id %>/seeker/<%= seeker._id %>" method="Post">
                        <div>
                        <button  id="demo" class="btn btn-success" name="accept" value="" <% if(user.isStatus != 'Pending'){%> disabled <%}%> >
                            Select
                        </button>
                    </div>
                    </form>
                    </td>
                   <% } %>
                   <% if((currentUser && currentUser.isCompany)){ %><td>
                    <form  onsubmit="return confirm('Do you really want to Reject the following?');" action="/job/<%= job._id %>/rejected/<%= user.postedBy.id %>/seeker/<%= seeker._id %>" method="Post">
                        <div >
                        <button  id="demo1" <% if(user.isStatus != 'Pending'){%> disabled <%}%> class="btn btn-danger">
                            Reject
                        </button>
                    </div>
                    </form>
                    </td>
                   <% } %>
            </tr>
            </tbody>

<% } %>
<% }); %>
<% i++ %>
<% }); %>
        </table>
        </div>
