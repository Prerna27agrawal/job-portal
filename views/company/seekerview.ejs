<%- include("../partials/header") %>
        <h2 class="text-center"><b><%= job.name %></b></h2>
        <br>
        <div class="container">
        <div class="table-responsive">
        <table class="table table-hover table-bordered">
            <thead class="thead-dark" style="background-color: black;color:white">
                <tr>
                    <th scope="col">No.</th>
                    <th scope="col">FirstName</th>
                    <th scope="col">LastName</th>
                    <th scope="col">College</th>
                    <th scope="col">Graduation Year</th>
                    <th scope="col">Stream</th>
                    <th scope="col">Resume download</th>
                    <th scope="col">Current Status</th>
                    <th scope="col">More Info</th>
                    <th scope="col">Accept</th>
                    <th scope="col">Reject</th>
                </tr>
            </thead>
            <% var i=1; %>
<% job.appliedBy.forEach(function(user){%>
<% seekers.forEach(function(seeker){%>
    <% if(seeker.seekerBy.id.equals(user.postedBy.id)){%>

       <tbody>
            <tr>
                <th scope="row"><%=i %></th>
                <td><%=seeker.firstname %></td>
                <td><%=seeker.lastname %></td>
                <td><%=seeker.education %></td>
                <td><%=seeker.gradyear %></td>
                <td><%=seeker.stream %></td>
                <td>
                    <a class="btn btn-light" role="button" href="/resume_folder/<%= seeker.resume %>" download><i class="fa fa-file-text" style="font-size: 36px;color:red;"></i></a>
                </td>
                <% if(user.isStatus == 'Accepted'){ %>
                <td  style="color:darkgreen;"><strong> Accepted</strong></td>
                <% } %>
                <% if(user.isStatus == 'Rejected'){ %>
                    <td  style="color:red;">Rejected</td>
                <% } %>
                <% if(user.isStatus == 'Pending'){ %>
                        <td  style="color:black;">Pending</td>
                 <% } %>
                 <% if((currentUser && currentUser.isCompany)){ %><td>
                    <a class="btn btn-primary" role="button" href="/seeker/<%= user.postedBy.id %>/myprofile">More Info</a>
                  </td>
                 <% } %>
                 <% if((currentUser && currentUser.isCompany)){ %><td>
                    <form onsubmit="return confirm('Do you really want to Accept the following?');" action="/job/<%= job._id %>/selected/<%= user.postedBy.id %>/seeker/<%= seeker._id %>" method="Post">
                        <div>
                        <button  id="demo" class="btn btn-success" name="accept" value="" <% if(user.isStatus != 'Pending'){%> disabled <%}%> >
                            Select
                        </button>
                    </div>
                    </form>
                    </td>
                   <% } %>
                   <% if((currentUser && currentUser.isCompany)){ %><td>
                    <form  onsubmit="return confirm('Do you really want to Reject the following?');" action="/job/<%= job._id %>/rejected/<%= user.postedBy.id %>/seeker/<%= seeker._id %>" method="Post">
                        <div >
                        <button  id="demo1" <% if(user.isStatus != 'Pending'){%> disabled <%}%> class="btn btn-danger">
                            Reject
                        </button>
                    </div>
                    </form>
                    </td>
                   <% } %>
            </tr>
            </tbody>

<% } %>
<% }); %>
<% i++ %>
<% }); %>
        </table>
        </div>
        <!-- /company/:id/show/jobstats/:page -->
        <div class="row text-center">
            <% if(pages >0){ %> 
                <ul class="pagination text-center">
                    <% if (current == 1) { %>
                        <li class="disabled"><a>&#171;</a></li>
                    <% } else { %>
                        <li><a href="/company/<%= job._id %>/jobstats/1">&#171;</a></li>
                    <% } %>
                    <% var i = (Number(current) > 5 ? Number(current) - 4 : 1) %>
                                <% if (i !== 1) { %>
                                    <li class="disabled"><a>...</a></li>
                                <% } %>
                                <% for (; i <= (Number(current) + 4) && i <= pages; i++) { %>
                                    <% if (i == current) { %>
                                        <li class="active"><a><%= i %></a></li>
                                    <% } else { %>
                                        <li><a href="/company/<%= job._id %>/jobstats/<%= i %>"><%= i %></a></li>
                                    <% } %>
                                    <% if (i == Number(current) + 4 && i < pages) { %>
                                        <li class="disabled"><a>...</a></li>
                                    <% } %>
                                <% } %>
                                <% if (current == pages) { %>
                                    <li class="disabled"><a>&#187;</a></li>
                                <% } else { %>
                                    <li><a href="/company/<%= job._id %>/jobstats/<%= pages %>">&#187;</a></li>
                                <% } %>
                            </ul>
                            </div>
                <%}%>
            </div>
