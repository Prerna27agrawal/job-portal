<%- include("../partials/header") %>
<div class="row">
    <h1 style="text-align: center">Sign Up</h1>
    <div style="width: 30%; margin: 25px auto;">
        <form action="/register/company" method="post">
            <div class="form-group">
                <label for="name">Company Name: </label>
                <input class="form-control" type="text"  placeholder="Company Name" id="name" required> 
            </div>

            <div class="form-group">
                <label for="email">Work Email ID: </label>
                <input class="form-control" type="email"  placeholder="Enter Email Id" id="email" required>
            </div>
            <div class="form-group">
                <label for="tagline">Tagline: </label>
                <input class="form-control" type="text"  placeholder="Briefly describe about your company" id="tagline" required>
            </div>

            <div class="form-group">
                <label for="description">Desrciption: </label>
                <textarea class="form-control" rows="3" id="description"></textarea>
            </div>
            <div class="form-group">
                <label for="website">Website: </label>
                <input type="url" class="form-control" placeholder="Add your company website link" id="website" required>
            </div>
            <div class="form-group">
                <label for="logo">Logo: </label>
                <input type="file" class="form-group" placeholder="Add logo" accept=".png,.jpg,.jpeg" id="logo" aria-describedby="passwordHelpInline" required>
                <small id="passwordHelpInline" class="text-muted">
                    (Accepted file formats: PNG, JPG, JPEG)
                </small>
            </div>
            <div class="form-group">
                <label for="password">Enter Password: </label>
                <input class="form-control" type="password"  placeholder="password" id="password" required>
            </div>
            <div class="form-group">
                <label for="confirm_password">Confirm password: </label>
                <input class="form-control" type="password"  placeholder="confirm password" id="confirm_password" required>
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Sign Up!</button>
            </div>
        </form>
        <a href="/">Go Back</a>
    </div>
</div>
<script type="text/javascript">
var password = document.getElementById("password")
, confirm_password = document.getElementById("confirm_password");

function validatePassword(){
if(password.value != confirm_password.value) {
  confirm_password.setCustomValidity("Passwords Don't Match");
} else {
  confirm_password.setCustomValidity('');
}
}

password.onchange = validatePassword;
confirm_password.onkeyup = validatePassword;
</script>
