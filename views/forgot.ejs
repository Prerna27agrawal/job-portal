<%- include("partials/header") %>

<div class="row">
    <!-- <h1 style="text-align: center">Forgot Password</h1> -->
    <div style="width: 40%; margin: 25px auto;">
        <form action="/forgot" method="POST">
            <legend style="text-align: center">Forgot Password</legend>
            <div class="form-group">
                <input class="form-control" type="text" name="email" placeholder="Enter the email for verification" autofocus>
            </div>
            <div class="form-group">
				<input type="submit" class=" form-control btn btn-primary" value="Reset Password">
			</div>
        </form>
        <p class="mt-4 text-center">
            New User? <a href="/register">Register</a>
        </p>
        <p class="mt-4 text-center">
            Remember Password? <a href="/login">Login</a>
        </p>
    </div>
</div>

<%- include("partials/footer") %>