                name="posts[description]">
			</div>
			<div class="form-group">
					<button class="btn btn-lg btn-primary btn-block">
					SUBMIT
				</button>
			</div>
			
		</form>
					<a href="/company/<%= company.createdBy.id %>/myprofile">Go Back</a>
				</div>
		
            </div>
			</div>
